@model DesignUrFixie.Models.Bike

@{
    ViewBag.Title = "Details";
}

<h2></h2>
<section class="CreateHeight">
    <div div class="col-sm-6"> <!-- div takes up half the grid-->
        <!-- Order Bike Button -->
        <h2>Do you wish to order this Bike?</h2>
        <h3>Make a Stripe Payment</h3>
        <div>
           @Html.ActionLink("Pay with Stripe", "Charge", null, new { @class = "btn btn-default" }) <!-- Actionlink bring one onclick of button to the Charge page-->
            <!--btn btn-default-->
        </div>
    </div>

    <div class="col-sm-6">  <!-- div takes up half the grid-->
        
        <hr />
        <dl class="dl-horizontal">  <!-- specific detail for that item is loaded in the form -->
            <dt>
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustomerName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FrameColour)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FrameColour)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SaddleColour)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SaddleColour)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.HandlebarColour)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HandlebarColour)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.WheelColour)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WheelColour)
            </dd>
            <dd>
                @Html.ActionLink("Edit", "Edit", new { id = Model.BikeId }) |   <!-- option to edit or return to Index list -->
                @Html.ActionLink("Back to List", "Index")
            </dd>
        </dl>
</div>



   

    <!--  THE IMAGE  -->
    <div class="col-sm-12">
        <!--    BIKE IMAGE    -->
        <div id="GreyBike">
            <img src="~/Content/Images/GreyBike.png" class="img-responsive">
        </div>
        <div>
            <div id="FrameImage">
            </div>
            <div id="SaddleImage">
            </div>
            <div id="HandlebarImage">
            </div>
            <div id="WheelsImage">
            </div>
        </div>
    </div>
</section>